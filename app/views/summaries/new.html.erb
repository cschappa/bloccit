<h1>New Summary</h1>

<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-8">
    <%= form_for [@topic, @post, @summary] do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, class: 'form-control', placeholder: "Enter summary" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save",  class: 'btn btn-success'%>
    </div>
    <% end %>
  </div>
</div>
