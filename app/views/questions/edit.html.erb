<h1>Edit Question</h1>

<div class="row">
  <div class="col-md-4">
    <p>Guidelines for questions</p>
    <ul>
        <li>Google first</li>
        <li>Don't ask questions that have been answered already</li>
        <li>Provide detailed background so issue can be reproduced</li>
       <ul>
  </div>
  <div class="col-md-8">
    <%= form_for @question do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter Question title" %>
    </div>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter question body" %>
    </div>
    <div class="form-group">
      <label>
       <%= f.check_box :resolved, class: 'form-control' %>  Resolved
      </label>
    </div>

    <div class="form-group">
      <%= f.submit "Save", class: 'btn btn-success'%>
    </div>
    <% end %>

  </div>
</div>
